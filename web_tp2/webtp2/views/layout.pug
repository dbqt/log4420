doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')

    body
        block link
            -var selected = 'Accueil';

        -var menu = { 'Accueil': '/', 'Tableau de bord': '/dashboard', 'Instructions': '/instructions' };

        // navbar
        nav
            ul
                each val, key in menu
                    li
                        if selected === key
                            a.active(href=val, title=key)=key
                        else
                            a(href=val, title=key)=key

        // contenu des pages
        img#logo(src="images/logo.png")
        block content

        footer
            section
                p
