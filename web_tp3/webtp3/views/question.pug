extends layout

block link
    -var selected = "Question"; // Not in menu

block content
    // - Mode
    if(mode == "testrapide")
        h1 Test Rapide
    else
        h1 Examen 
        h2#numerotation Question #{nb}/#{nbTotal}
    
    div.flexBox
        section
            h3#domaine
            h3#question
            
            form.question()
                span
                    input(type="radio" name="answer" value=1)
                    label#reponse1
                span
                    input(type="radio" name="answer" value=2)
                    label#reponse2
                span
                    input(type="radio" name="answer" value=3)
                    label#reponse3
                    
            a.flatButton(href="/dashboard") Retour au tableau de bord
            
            button#suivant.flatButton() Suivant

        // Statistiques
        aside
            h3 Statistiques
            p Note courante : 0/#{nb-1} 

    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/question_logic.js')

