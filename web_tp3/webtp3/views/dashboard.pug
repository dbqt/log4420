extends layout



block link
    -var selected = "Tableau de bord";

block content
    script(src='/javascripts/exam_configs.js')
    h1= title  

    div.flexBox
        
        // Configurations de l'examen
        section
            h2 Configurations de l'examen
        
            form(action="/question")
                label Domaine: 
                select( required)
                    option(value="html") HTML
                    option(value="js") JavaScript
                    option(value="css") CSS

            
                label Nombre de questions: 
                input(type="number"  value=1 required)

                //a.flatButton(href="/question/testrapide/1" onclick="lol()") Débuter le test rapide
                input.flatButton(type="submit" value="Débuter l'exam")
                input.flatButton(type="submit" value="Débuter le test rapide")

           
            
        //Statistiques
        aside
            h2 Statistiques
            p Nombre de questions réussies: 15/23
            p Moyenne des examens : 13/20
            a.flatButton(href="#openModalBox") Statistiques Détaillées

    // - A remplacer par des vrais entrees d'examen
    - var examScores = { 'Exam 1': '10/20', 'Exam 2': '12/20', 'Exam 3': '17/20', 'Exam 4': '15/20', 'Exam 5': '19/20', 'Exam 6': '11/20', 'Exam 7': '17/20' };
    div.modalBox#openModalBox
        div.modalBoxMessage()
            h2 Statistiques détaillées
            table
                thead
                    tr
                        th ID de l'examen
                        th Note obtenue
                tbody
                    each val, key in examScores
                        tr
                            td=key
                            td=val
               
            
            a.flatButton(href="") Fermer
        a.closeModal(href="")